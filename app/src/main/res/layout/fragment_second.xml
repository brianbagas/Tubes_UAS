<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SecondFragment">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="390dp"
        android:layout_height="62dp"
        android:hint="NEAREST THEATRE"
        android:layout_marginTop="50dp"
        android:paddingTop="15dp"
        android:textAlignment="center"
        android:textColorHint="#1B1C51"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/layoutRV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54" />

    <FrameLayout
        android:id="@+id/layoutRV"
        android:layout_width="412dp"
        android:layout_height="595dp"
        android:layout_marginTop="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:mapbox_cameraTargetLat="-7.779411"
            mapbox:mapbox_cameraTargetLng="110.41613"
            mapbox:mapbox_cameraZoom="11">
        </com.mapbox.mapboxsdk.maps.MapView>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>